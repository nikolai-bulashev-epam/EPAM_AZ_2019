{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerSasToken": {
      "type": "string"
    },
    "SAName": {
      "type": "string"
    },
    "RGName": {
      "type": "string"
    }
  },
  "variables": {
    "templateBaseUrl": "[concat('https://',parameters('SAName'),'.file.core.windows.net/',parameters('RGName'),'/')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "vmnet",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'),'VMnet.json',parameters('containerSasToken'))]",
          "contentVersion":"1.0.0.0"
        },
        "parametersLink": {
            "uri":"[concat(variables('templateBaseUrl'),'Parameters.json',parameters('containerSasToken'))]",
            "contentVersion":"1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "sa",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'SA.json',parameters('containerSasToken'))]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "kv",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'KVault.json',parameters('containerSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {"value": "[concat(parameters('RGName'),'vault')]"},
          "objectId": {"value": "8daada0b-d2d0-4d03-b957-764919e5178a"},
          "keysPermissions": {"value": ["all"]},
          "secretsPermissions": {"value": ["all"]}
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "VM01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'Vmachine.json',parameters('containerSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername" : {"value": "[concat('admin-', parameters('RGName'))]"},
          "adminPassword" : {"value": "l8}U?N[X3me3"},
          "dnsLabelPrefix": {"value": "[concat(parameters('RGName'),'-machine01')]"}
        }
      },
      "dependsOn": [
        "kv"
      ]
    }
  ],
  "outputs": {
    "SAname" : {
      "type" : "string",
      "value": "[reference('sa').outputs.storageAccountName.value]"
    },
    "VnetName" : {
      "type" : "string",
      "value": "[reference('vmnet').outputs.VMNetOutput.value]"
    }
  }
}
