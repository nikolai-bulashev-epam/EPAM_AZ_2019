{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueDnsNameForWebApp": {
          "type": "string",
          "metadata": {
            "description": "Relative DNS name for the WebApps, must be globally unique.  An index will be appended for each Web App."
          }
        },
        "uniqueDnsName": {
            "type": "string",
            "metadata": {
                "description": "Relative DNS name for the traffic manager profile, resulting FQDN will be <uniqueDnsName>.trafficmanager.net, must be globally unique."
            }
        },
        "webAppLocations": {
            "type": "array"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-11-01",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "dependsOn": [
              "Microsoft.Network/trafficManagerProfiles/HW05TMProfile"
            ],
            "location": "global",
            "name": "[concat('HW05TMProfile/Endpoint', copyIndex())]",
            "copy": {
              "name": "endpointloop",
              "count": "[length(parameters('webAppLocations'))]"
            },
            "properties": {
              "targetResourceId": "[resourceId('Microsoft.Web/sites/', concat(parameters('uniqueDnsNameForWebApp'), copyIndex()))]",
              "endpointStatus": "Enabled"
            }
        },
        {
            "apiVersion": "2015-11-01",
            "type": "Microsoft.Network/trafficManagerProfiles",
            "name": "HW05TMProfile",
            "location": "global",
            "properties": {
              "profileStatus": "Enabled",
              "trafficRoutingMethod": "Priority",
              "dnsConfig": {
                "relativeName": "[parameters('uniqueDnsName')]",
                "ttl": 30
              },
              "monitorConfig": {
                "protocol": "HTTP",
                "port": 80,
                "path": "/"
              }
            }
        }
    ]
  }